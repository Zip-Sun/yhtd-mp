<!--miniprogram/pages/home.wxml-->
<view class="index w100 {{isHeader ? 'header-active' : ''}}">
  <view class="header-block">
    <image class="banner" src='cloud://shankun-r-7ee811.7368-shankun-r-7ee811/images/bg/bg4.jpg' mode="aspectFill"></image>
    <navigator url="../mine/mine">
      <view class="mine-btn">我的空间</view>
    </navigator>
  </view>
  <view class="list-block w100">
    <view class='item-block border-bottom bgff' wx:for="{{listData}}" wx:key="{{index}}">
      <image class='userImg mr10' src='{{item.avatarUrl}}'></image>
      <view class="item-right">
        <view class="username">{{item.nickName || '路人甲'}}</view>
        <view class='item-text'>
          <displayPartText lineNumber="2" textLineHeight="44" showBtnText="全文" hideBtnText="收起">{{item.content}}</displayPartText>
        </view>
        <view class='img-block'>
          <image class='img' lazy-load="{{true}}" mode="aspectFill" wx:for="{{item.image}}" wx:for-item='_item' wx:for-index="_index" wx:key="{{_index}}" data-index="{{index}}" data-imgIndex="{{_index}}" data-curr-url="{{_item}}" src='{{_item || ""}}' catchtap="previewImage"></image>
        </view>
        <view class="item-footer">
          <view class="item-time plr30">{{item.newTime}}前</view>
          <block wx:if="{{isRelease}}">
            <icon class="iconfont icon-gengduo more-icon" data-imgid="{{item.image}}" data-id="{{item._id}}" data-openid="{{item._openid}}" catchtap="actionBtn" wx:if="{{openid === item._openid || auth === 1}}"></icon>
          </block>

        </view>
      </view>
    </view>
  </view>

  <!-- 加载更多 -->
  <view class="loading" hidden="{{!searchLoading}}">疯狂加载中...</view>
  <view class="loading complete" hidden="{{!searchLoadingComplete}}">--哥是有底线的--</view>

  <navigator url="release/release" hover-class="other-navigator-hover" wx:if="{{isRelease}}">
    <view class="release-btn {{!isTop ? 'active' : ''}}">
      <icon class="iconfont icon-fabuxinxi"></icon>
    </view>
  </navigator>
  <!-- 返回顶部 -->
  <view class="back-top" wx:if="{{isTop}}" catchtap="backTop">
    <icon class="iconfont icon-backtop"></icon>
  </view>

</view>